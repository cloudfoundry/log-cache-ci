- type: replace
  path: /instance_groups/name=lcats/jobs/name=lcats/properties
  value:
    client_id: lcats
    client_secret: ((/bosh-<%= ENV["ENV_NAME"] %>/cf/lcats_client_secret))
    log_cache_cf_auth_proxy: https://log-cache.<%= ENV["SYS_DOMAIN"] %>
    uaa_url: https://uaa.<%= ENV["SYS_DOMAIN"] %>
    skip_cert_verify: true

- type: replace
  path: /instance_groups/name=lcats/jobs/name=lcats/consumes?/log-cache?
  value:
    from: log-cache
